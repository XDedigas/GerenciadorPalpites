@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    var lista = ViewBag.Lista;
    var titulo = ViewBag.Title;

    ViewBag.Title = "Classificação";
}

<link href="~/Content/bootstrap-select.css" rel="stylesheet" />
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<link href="~/Content/Cadastro/BaseCadastro.css" rel="stylesheet" />

@RenderSection("Styles", true)
@RenderBody()

<div id="cadastro">
    <section id="cadastro_cabecalho">
        <div class="row">
            <div class="col-md-10"><h1>@ViewBag.Title</h1></div>
            <div class="col-md-2" style="padding-top: 24px;"><button id="btn_palpites" class="btn btn-info" type="submit">Palpites</button></div>
        </div>
    </section>
    <section id="cadastro_conteudo">
        <div id="cabecalho_grid" class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-4">
                        @RenderSection("FiltroTamanhoPagina")
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <table id="grid_cadastro" class="table table-bordered table-striped table-hover @Html.Raw(lista == null || lista.Count == 0 ? "invisivel" : "")">
                    <thead>
                        <tr>
                            @RenderSection("TituloGrid", true)
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
                <div id="mensagem_grid" @Html.Raw(lista != null && lista.Count > 0 ? "class=\"invisivel\"" : "")>
                    Nenhum registro em @titulo
                </div>
            </div>
        </div>
        @RenderSection("Paginacao", true)
    </section>
</div>
@section Scripts{
    <script src="~/Scripts/mustache.min.js"></script>
    <script src="~/Scripts/bootstrap-select.js"></script>
    <script src="~/Scripts/jquery.mask.min.js"></script>
    <script src="~/Scripts/Cadastro/BaseCadastro.js"></script>
    @RenderSection("Scripts", true)

    <script>
        var linhas = [];
        @{
            foreach (var item in Model)
            {
                @:linhas.push(@Html.Raw(Json.Encode(item)));
            }
        }
    </script>
}